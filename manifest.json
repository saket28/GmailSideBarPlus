{
  "manifest_version": 3,
  "name": "GMessanger",
  "version": "1.0.0",
  "description": "Adds a sidebar to Gmail showing messanger style DMs (direct messages).",
  "permissions": ["storage"],
  "host_permissions": ["*://mail.google.com/*"],
  "content_scripts": [{
    "matches": ["*://mail.google.com/*"],
    "css": ["styles.css"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "minimum_chrome_version": "80",
  "web_accessible_resources": [{
    "resources": [
      "modules/config.js",
      "modules/domUtils.js",
      "modules/emailScanner.js",
      "modules/eventHandlers.js",
      "modules/main.js",
      "modules/state.js",
      "modules/utils.js"
    ],
    "matches": ["*://mail.google.com/*"],
    "use_dynamic_url": false
  }]
}
